<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20">
    
    <RelativeLayout 
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2">
    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Share Via"
	        android:textSize="20sp"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:layout_above="@+id/share_view"/>
	    <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:id="@+id/share_view"
		    android:layout_alignParentBottom="true"
		    android:background="@android:color/darker_gray"/>
    </RelativeLayout>
    
    
    
    <LinearLayout 
	    android:orientation="vertical" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="18"
	    android:weightSum="3"
	    android:layout_margin="40dp">
    
	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:orientation="horizontal"
	    	android:layout_weight="1"
	    	android:weightSum="2">
	    	
	        <LinearLayout
	            android:layout_weight="1"
	            android:layout_width="0dp"
	    		android:layout_height="match_parent"
	    		android:orientation="vertical"
	    		android:weightSum="10"
		        android:layout_marginRight="10dp">
	            
	            <ImageView
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:src="@drawable/empty_photo"
			        android:contentDescription="Share via Facebook"
			        android:id="@+id/facebook"
			        android:gravity="center_horizontal"
			        android:textColor="#ffffffff"
			        android:textSize="24sp"
			        android:layout_weight="7" />
	            <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:text="Facebook"
	                android:gravity="center_horizontal"
	                android:layout_weight="3"/>
	        </LinearLayout>  
	        
	        <LinearLayout
	            android:layout_weight="1"
	            android:layout_width="0dp"
	    		android:layout_height="match_parent"
	    		android:orientation="vertical"
	    		android:weightSum="10"
		        android:layout_marginLeft="10dp">
	        
		        <ImageView
			        android:layout_width="fill_parent"
			        android:layout_height="0dp"
			        android:src="@drawable/empty_photo"
			        android:contentDescription="Share via Twitter"
			        android:id="@+id/twitter"
			        android:layout_gravity="center_horizontal"
			        android:textColor="#ffffffff"
			        android:textSize="24sp"
			        android:layout_weight="7" /> 
			    <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:text="Twitter"
	                android:gravity="center_horizontal"
	                android:layout_weight="3"/>
	        </LinearLayout>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:orientation="horizontal"
	    	android:layout_weight="1"
	    	android:weightSum="2">
	        
	        <LinearLayout
	            android:layout_weight="1"
	            android:layout_width="0dp"
	    		android:layout_height="match_parent"
	    		android:orientation="vertical"
	    		android:weightSum="10"
		        android:layout_marginRight="10dp">
			    <ImageView
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:src="@drawable/empty_photo"
			        android:contentDescription="Share via Instagram"
			        android:id="@+id/instagram"
			        android:layout_gravity="center_horizontal"
			        android:textColor="#ffffffff"
			        android:textSize="24sp"
			        android:layout_weight="7"/>
			    <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:text="Instagram"
	                android:gravity="center_horizontal"
	                android:layout_weight="3"/>   
			        
		    </LinearLayout>
	        
	    	<LinearLayout
	            android:layout_weight="1"
	            android:layout_width="0dp"
	    		android:layout_height="match_parent"
	    		android:orientation="vertical"
	    		android:weightSum="10"
		        android:layout_marginLeft="10dp">
		        <ImageView
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:src="@drawable/empty_photo"
			        android:contentDescription="Share via Google+"
			        android:id="@+id/googleplus"
			        android:layout_gravity="center_horizontal"
			        android:textColor="#ffffffff"
			        android:textSize="24sp"
			        android:layout_weight="7"/>
		        <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:text="Google+"
	                android:gravity="center_horizontal"
	                android:layout_weight="3"/>
		    </LinearLayout>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:orientation="horizontal"
	    	android:layout_weight="1"
	    	android:weightSum="2">
	    	
	        <LinearLayout
	            android:layout_weight="1"
	            android:layout_width="0dp"
	    		android:layout_height="match_parent"
	    		android:orientation="vertical"
	    		android:weightSum="10"
		        android:layout_marginRight="10dp">
	        
		        <ImageView
			        android:layout_width="fill_parent"
			        android:layout_height="0dp"
			        android:src="@drawable/empty_photo"
			        android:contentDescription="Share via Mail"
			        android:id="@+id/mail"
			        android:layout_gravity="center_horizontal"
			        android:textColor="#ffffffff"
			        android:textSize="24sp"
			        android:layout_weight="7" /> 
			    <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:text="E-mail"
	                android:gravity="center_horizontal"
	                android:layout_weight="3"/>
	        </LinearLayout>
	    	
	        <LinearLayout
	            android:layout_weight="1"
	            android:layout_width="0dp"
	    		android:layout_height="match_parent"
	    		android:orientation="vertical"
	    		android:weightSum="10"
		        android:layout_marginLeft="10dp">
	            
	            <ImageView
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:src="@drawable/empty_photo"
			        android:contentDescription="Share via SMS"
			        android:id="@+id/sms"
			        android:layout_gravity="center_horizontal"
			        android:layout_weight="7" />
	            <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:text="SMS"
	                android:gravity="center_horizontal"
	                android:layout_weight="3"/>
	        </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>