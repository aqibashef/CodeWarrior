<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	 <com.gc.materialdesign.views.LayoutRipple
	        android:id="@+id/productListItemRippleLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#ffffff"
	        android:clickable="true"
	        android:padding="5dp" >
	
	        <ImageView
	            android:id="@+id/productImage"
	            android:layout_width="100dp"
	            android:layout_height="100dp"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="5dp"
	            />
	
	       <TextView 
	           android:id="@+id/productTitle"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textColor="#000000"
	           android:layout_toRightOf="@+id/productImage"
	           android:layout_toEndOf="@+id/productImage"/>
	       <TextView 
	           android:id="@+id/productLocation"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textColor="#000000"
	           android:layout_below="@+id/productTitle"
	           android:layout_toRightOf="@+id/productImage"
	           android:layout_toEndOf="@+id/productImage"/>
	       <TextView 
	           android:id="@+id/productTime"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textColor="#000000"
	           android:layout_below="@+id/productLocation"
	           android:layout_toRightOf="@+id/productImage"
	           android:layout_toEndOf="@+id/productImage"/>
	       
	       <TextView android:id="@+id/productPriceType"
	            android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textColor="#00000008"
	           android:layout_above="@+id/productPrice"/>
	       
	         <TextView android:id="@+id/productPrice"
	            android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textColor="#000000"
	           android:layout_alignParentRight="true"
	           android:layout_alignParentBottom="true"/>
	    </com.gc.materialdesign.views.LayoutRipple>

</RelativeLayout>