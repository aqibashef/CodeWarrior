<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/create_ad_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/create_ad_imageViewPBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/profile_bg" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">
            
            <ImageView
             android:id="@+id/image_upload_create_ad"
             android:layout_width="100dp"
             android:layout_height="100dp" 
             android:background="@drawable/camera_button_bg"/>
        
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="Upload photo"
            android:singleLine="true"
            android:gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/create_ad_cover"
        android:weightSum="11"
        android:orientation="vertical">
        
        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/chooseCatagory"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:background="#FFF"
	        android:clickable="true"
	        materialdesign:rippleSpeed="40.0"
	        android:layout_weight="3">
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginStart="32dp"
	            android:layout_marginLeft="32dp"
	            android:textSize="18sp"
	            android:text="1. Choose Category" />
            
        </com.gc.materialdesign.views.LayoutRipple>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#88CECECE" />
        
        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/writeDescription"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:background="#FFF"
	        android:clickable="true"
	        materialdesign:rippleSpeed="40.0"
	        android:layout_weight="3">
	        
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginStart="32dp"
	            android:layout_marginLeft="32dp"
	            android:textSize="18sp"
	            android:text="2. Write Description" />
            
        </com.gc.materialdesign.views.LayoutRipple>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#88CECECE" />
        
        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/yourInfo"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:background="#FFF"
	        android:clickable="true"
	        materialdesign:rippleSpeed="40.0"
	        android:layout_weight="3">
            
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginStart="32dp"
	            android:layout_marginLeft="32dp"
	            android:textSize="18sp"
	            android:text="3. Your Information" />
            
        </com.gc.materialdesign.views.LayoutRipple>
        
        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/create_ad_submit"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:background="@color/colorPrimary"
	        android:clickable="true"
	        materialdesign:rippleSpeed="40.0"
	        android:layout_weight="2">
            
            <TextView
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:textSize="20sp"
	            android:textColor="#fff"
	            android:text="Submit" />
            
        </com.gc.materialdesign.views.LayoutRipple>
        
        <!-- <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/create_ad_submit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:text="@string/textLogin"
            android:textSize="24sp"
            materialdesign:rippleSpeed="40.0"
            materialdesign:rippleBorderRadius="0" /> -->
        
    </LinearLayout>
</RelativeLayout>
